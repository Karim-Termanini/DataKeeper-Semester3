    class SoundManager <<Singleton>> {
      + getInstance(): SoundManager
      + playSound(String): void
      + playBackgroundMusic(): void
      + playMenuMusic(): void
      + playBossMusic(): void
      + stopBackgroundMusic(): void
      + stopBossMusic(): void
      + stopMenuMusic(): void
      + setCombatLayerActive(boolean): void
    }
  }
  package utils {
    class EnemyPool <<Singleton>>
    class SaveManager
    class Constants
  }
}

